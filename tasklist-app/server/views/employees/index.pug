extends ../layout/index
block content
  #employeeList.container
    .row
      .col-sm-8
        article.employeeslist
          .container
            .row
              each employee in employeeslist
                .col-sm-8
                  h3.employeeslist-title=employee.title
                  h5.employeeslist-name
                    | with &nbsp;
                    a(href=`/employees/${employee.shortname}`)=employee.name
                  p.employeeslist-info
                    a(href=`/employees/${employee.shortname}`)
                      img.employeeslist-img.img-circle.pull-left(src=`/images/employee/${employee.shortname}_sm.jpg`, alt=`Photo of ${employee.name}`)
                    | #{employee.summary}  
      aside.col-sm-4
        article.sidebar
          include ../includes/work